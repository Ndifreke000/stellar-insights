DATABASE_URL=postgresql://postgres:password@localhost:5432/stellar_insights
RUST_LOG=info
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
REDIS_URL=redis://127.0.0.1:6379
RPC_MOCK_MODE=false
BACKUP_S3_BUCKET=your-backup-bucket-name
BACKUP_RETENTION_DAYS=30
NOTIFICATION_EMAIL=admin@example.com
WALG_S3_PREFIX=s3://$BACKUP_S3_BUCKET/backups/
PGDATA=/var/lib/postgresql/data
# Graceful Shutdown Configuration (in seconds)
# Maximum time to wait for in-flight requests to complete
SHUTDOWN_GRACEFUL_TIMEOUT=30
# Maximum time to wait for background tasks to complete
SHUTDOWN_BACKGROUND_TIMEOUT=10
# Maximum time to wait for database connections to close
SHUTDOWN_DB_TIMEOUT=5
